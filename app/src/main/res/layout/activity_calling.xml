<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brick">

    <!-- Caller avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/profilepic"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Name + heart -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mother"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/redheart"
        android:drawablePadding="6dp"
        app:layout_constraintTop_toBottomOf="@id/imgAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <!-- Call duration -->
    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:12"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- Left button (notes/chat) -->

    <!-- Center big red hang-up button -->

    <!-- Right speaker button -->

    <ImageButton
        android:id="@+id/btnNotes"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/brick"
        android:scaleType="fitCenter"
        android:src="@drawable/chatting1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnEndCall"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnEndCall"
        android:layout_width="112dp"
        android:layout_height="75dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/circlebg2"
        android:backgroundTint="@color/brick"
        android:scaleType="fitCenter"
        android:src="@drawable/endcall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnSpeaker"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btnNotes" />

    <ImageButton
        android:id="@+id/btnSpeaker"
        android:layout_width="59dp"
        android:layout_height="68dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="52dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/soundon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnEndCall"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
