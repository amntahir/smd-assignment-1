<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".feed">

    <!-- Top bar -->
    <ImageButton
        android:id="@+id/btnfcam"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/feedcam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/tvSmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textColor="@color/brown"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/topRight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp">

        <ImageButton
            android:id="@+id/btnreel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/reel"/>

        <ImageButton
            android:id="@+id/btnshare"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/share1" />
    </LinearLayout>

    <!-- Stories row (fixed, not scrollable) -->
    <LinearLayout
        android:id="@+id/storiesRow1"
        android:layout_width="0dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvSmd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">

        <!-- Your Story -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btnoval"
                android:layout_width="50dp"
                android:layout_height="49dp"
                android:src="@drawable/oval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Story"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- karennne -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/btnoval4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/oval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="karennne"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- zackjohn -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/btnoval51"
                android:layout_width="53dp"
                android:layout_height="51dp"
                android:src="@drawable/oval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zackjohn"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- kieron_d -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/btnoval3"
                android:layout_width="53dp"
                android:layout_height="49dp"
                android:src="@drawable/oval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kieron_d"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- craig_ -->
        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp">

            <ImageView
                android:id="@+id/btnoval2"
                android:layout_width="47dp"
                android:layout_height="51dp"
                android:src="@drawable/oval" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="craig_"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Post header -->
    <LinearLayout
        android:id="@+id/postHeader1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/storiesRow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnoval5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/oval"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="joshua_I"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokyo, Japan"
                android:textColor="@color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnbadge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/badge"/>
    </LinearLayout>

    <!-- Big photo (fixed height as in your file) -->
    <ImageView
        android:id="@+id/btnimage"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/d1"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/postHeader1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Actions -->
    <LinearLayout
        android:id="@+id/actionsRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/btnimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btlike"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like"/>

        <ImageButton
            android:id="@+id/btncomment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/comment"
            android:layout_marginStart="12dp"/>

        <ImageButton
            android:id="@+id/btnshae"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/shae"
            android:layout_marginStart="12dp"/>

        <ImageButton
            android:id="@+id/btnmove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/puple"
            android:layout_marginStart="12dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnsave"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:src="@drawable/save1"/>
    </LinearLayout>

    <!-- Likes + caption -->
    <LinearLayout
        android:id="@+id/likesBlock1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/actionsRow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/btnoval7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/oval"
                android:layout_marginEnd="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked by "
                android:textColor="@color/black"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="craig_love"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and 44,686 others"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="joshua_I  The game in Japan was amazing and I want to share some photos"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Bottom nav (no scroll; fixed icons) -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnt1"
            android:layout_width="50dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:src="@drawable/t1" />

        <ImageButton
            android:id="@+id/btnt2"
            android:layout_width="50dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:src="@drawable/t2" />

        <ImageButton
            android:id="@+id/btnt3"
            android:layout_width="50dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/t3" />

        <ImageButton
            android:id="@+id/btnt4"
            android:layout_width="50dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/t4" />

        <ImageButton
            android:id="@+id/btnt5"
            android:layout_width="50dp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:src="@drawable/t5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
