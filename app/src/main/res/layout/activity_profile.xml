<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/right"
            android:rotation="180"
            android:contentDescription="@string/app_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsernameTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kyan.coleman"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/options"
            android:contentDescription="@string/app_name"
            app:tint="@color/icons"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header: avatar + stats -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/story"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/statsRow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintStart_toEndOf="@id/imgAvatar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imgAvatar"
                    app:layout_constraintBottom_toBottomOf="@id/imgAvatar">

                    <!-- Posts -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="151"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="posts"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Followers -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="112K"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="followers"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <!-- Following -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="162"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="following"
                            android:textSize="12sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Name / username chip -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kyan Coleman"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kyan.coleman"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:background="@color/unicorn"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"/>

            <!-- Bio -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blogger\nAl vero eos et accusamus et iusto odio dignissimos ducimus..."
                android:textSize="13sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"/>

            <!-- Link row -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kyan.co"
                android:textStyle="bold"
                android:textColor="@color/brick"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"/>

            <!-- Followed by line -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Followed by your friend, another friend and 297 others"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"/>

            <!-- Buttons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/brick"
                    android:textColor="@color/white"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Message"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/unicorn"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="Email"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/unicorn"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/plus1"
                    app:tint="@color/icons"/>
            </LinearLayout>

            <!-- Highlights -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- New highlight -->
                    <LinearLayout
                        android:layout_width="72dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:layout_width="72dp"
                            android:layout_height="72dp"
                            android:background="@drawable/hollowcircle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New"
                            android:textColor="@color/icons"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Sample highlights -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="8dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/p31"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleImageView"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 1"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="8dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/p41"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleImageView"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Highlight 2"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="72dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_horizontal"
                            android:layout_marginStart="8dp">
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/p61"
                                android:scaleType="centerCrop"
                                app:shapeAppearanceOverlay="@style/CircleImageView"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New"
                                android:textSize="12sp"
                                android:textColor="@color/black"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/grid"
                    app:tint="@color/icons"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"/>

            <!-- Grid (3x3) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:padding="4dp">

                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p1"/>
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p21"/>
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p31"/>

                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p41"/>
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p51"/>
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p61"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="155dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/p71" />
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p81"/>
                <ImageView android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:adjustViewBounds="true" android:scaleType="centerCrop" android:src="@drawable/p91"/>

            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom navigation -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnt1"
            android:src="@drawable/home"
            app:tint="@color/icons"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnt2"
            android:src="@drawable/search1"
            app:tint="@color/icons"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnt3"
            android:src="@drawable/reels"
            app:tint="@color/icons"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/like"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btnt5"
            android:src="@drawable/profile"
            app:tint="@color/icons"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
