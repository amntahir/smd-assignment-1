<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- ===== Top bar ===== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnback"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:rotation="180"
            android:src="@drawable/right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnadd"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:src="@drawable/plus1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/titleUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jacob_w"
            android:textColor="@color/brick"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/btndropdown"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:rotation="90"
            android:src="@drawable/right"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/titleUser"
            app:layout_constraintTop_toTopOf="@id/titleUser"
            app:layout_constraintBottom_toBottomOf="@id/titleUser"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== Search bar ===== -->
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/unicorn"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/greysearch"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Search"
            android:textColor="@color/grey"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- ===== Scrollable list (static rows) ===== -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toTopOf="@id/bottomCamera"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="12dp">

            <!-- ==== Row 1 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="joshua_j"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar1"
                    app:layout_constraintEnd_toStartOf="@id/time1"
                    app:layout_constraintTop_toTopOf="@id/avatar1"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Have a nice day, bro!"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name1"
                    app:layout_constraintEnd_toStartOf="@id/cam1"
                    app:layout_constraintTop_toBottomOf="@id/name1"/>

                <TextView
                    android:id="@+id/time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· now"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam1"
                    app:layout_constraintBaseline_toBaselineOf="@id/name1"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar1"
                    app:layout_constraintBottom_toBottomOf="@id/avatar1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==== Row 2 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="karennne"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar2"
                    app:layout_constraintEnd_toStartOf="@id/time2"
                    app:layout_constraintTop_toTopOf="@id/avatar2"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="I heard this is a good movie, s..."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name2"
                    app:layout_constraintEnd_toStartOf="@id/cam2"
                    app:layout_constraintTop_toBottomOf="@id/name2"/>

                <TextView
                    android:id="@+id/time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· now"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam2"
                    app:layout_constraintBaseline_toBaselineOf="@id/name2"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar2"
                    app:layout_constraintBottom_toBottomOf="@id/avatar2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==== Row 3 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="martini_rond"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar3"
                    app:layout_constraintEnd_toStartOf="@id/time3"
                    app:layout_constraintTop_toTopOf="@id/avatar3"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="See you on the next meeting!"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name3"
                    app:layout_constraintEnd_toStartOf="@id/cam3"
                    app:layout_constraintTop_toBottomOf="@id/name3"/>

                <TextView
                    android:id="@+id/time3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 15m"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam3"
                    app:layout_constraintBaseline_toBaselineOf="@id/name3"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar3"
                    app:layout_constraintBottom_toBottomOf="@id/avatar3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==== Row 4 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="andrewww_"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar4"
                    app:layout_constraintEnd_toStartOf="@id/time4"
                    app:layout_constraintTop_toTopOf="@id/avatar4"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sounds good 😎😎"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name4"
                    app:layout_constraintEnd_toStartOf="@id/cam4"
                    app:layout_constraintTop_toBottomOf="@id/name4"/>

                <TextView
                    android:id="@+id/time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 20m"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam4"
                    app:layout_constraintBaseline_toBaselineOf="@id/name4"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar4"
                    app:layout_constraintBottom_toBottomOf="@id/avatar4"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==== Row 5 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="kiero_d"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar5"
                    app:layout_constraintEnd_toStartOf="@id/time5"
                    app:layout_constraintTop_toTopOf="@id/avatar5"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="The new design looks cool, b..."
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name5"
                    app:layout_constraintEnd_toStartOf="@id/cam5"
                    app:layout_constraintTop_toBottomOf="@id/name5"/>

                <TextView
                    android:id="@+id/time5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 1m"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam5"
                    app:layout_constraintBaseline_toBaselineOf="@id/name5"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar5"
                    app:layout_constraintBottom_toBottomOf="@id/avatar5"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- ==== Row 6 ==== -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar6"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/t5"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="maxjacobson"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@id/avatar6"
                    app:layout_constraintEnd_toStartOf="@id/time6"
                    app:layout_constraintTop_toTopOf="@id/avatar6"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:id="@+id/preview6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Thank you, bro!"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="@id/name6"
                    app:layout_constraintEnd_toStartOf="@id/cam6"
                    app:layout_constraintTop_toBottomOf="@id/name6"/>

                <TextView
                    android:id="@+id/time6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 2h"
                    android:textSize="12sp"
                    android:textColor="@color/grey"
                    app:layout_constraintEnd_toStartOf="@id/cam6"
                    app:layout_constraintBaseline_toBaselineOf="@id/name6"
                    android:layout_marginEnd="8dp"/>

                <ImageButton
                    android:id="@+id/cam6"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/bcam"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/avatar6"
                    app:layout_constraintBottom_toBottomOf="@id/avatar6"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ===== Bottom Camera (center) ===== -->
    <LinearLayout
        android:id="@+id/bottomCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/filledcam"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
